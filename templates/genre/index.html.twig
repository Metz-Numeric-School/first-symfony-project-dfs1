{% extends 'base.html.twig' %}

{% block title %}Gestion des genres{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row">
			<div class="col">
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Id</th>
								<th scope="col">Nom</th>
							</tr>
						</thead>
						<tbody>
							{% for genre in genres %}
								<tr>
									<td>{{ genre.id }}</td>
									<td>
										<a href="{{ path('app_genre_show', {'id': genre.id }) }}">{{ genre.name }}</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
